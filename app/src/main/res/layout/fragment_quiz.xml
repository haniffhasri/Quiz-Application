<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".quiz">


    <Button
        android:id="@+id/exit"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/round_corner"
        android:fontFamily="@font/poppins"
        android:text="submit"
        android:textColor="#FFFF"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/next"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/previous" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins"
        android:text="00:00"
        android:textColor="#FFFF"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/choice1"
        android:layout_width="308dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_corner"
        android:fontFamily="@font/poppins"
        android:text="ToggleButton"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toTopOf="@+id/choice2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13"
        app:layout_constraintVertical_bias="0.794" />

    <ToggleButton
        android:id="@+id/choice4"
        android:layout_width="308dp"
        android:layout_height="44dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/round_corner"
        android:fontFamily="@font/poppins"
        android:text="ToggleButton"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toTopOf="@+id/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/choice2"
        android:layout_width="308dp"
        android:layout_height="45dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/round_corner"
        android:fontFamily="@font/poppins"
        android:text="ToggleButton"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toTopOf="@+id/choice3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/choice3"
        android:layout_width="308dp"
        android:layout_height="47dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/round_corner"
        android:fontFamily="@font/poppins"
        android:text="ToggleButton"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toTopOf="@+id/choice4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="411dp"
        android:layout_height="212dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countdown" />

    <TextView
        android:id="@+id/question"
        android:layout_width="390dp"
        android:layout_height="204dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/imageView13" />

    <Button
        android:id="@+id/button"
        android:layout_width="74dp"
        android:layout_height="31dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/poppins"
        android:text="hint"
        android:textColor="#000"

        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/choice1"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="435dp"
        android:layout_height="29dp"
        android:src="@drawable/box"
        app:layout_constraintBottom_toTopOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countdown" />

    <TextView
        android:id="@+id/qnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        android:fontFamily="@font/poppins"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/smallbulb"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/next"
        app:layout_constraintBottom_toBottomOf="@+id/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/exit"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/previous"
        android:layout_width="68dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:src="@drawable/prev"
        app:layout_constraintBottom_toBottomOf="@+id/exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/exit"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="76dp"
        android:layout_height="51dp"
        android:src="@drawable/timerr"
        app:layout_constraintBottom_toBottomOf="@+id/countdown"
        app:layout_constraintEnd_toStartOf="@+id/countdown"
        app:layout_constraintTop_toTopOf="@+id/countdown" />

    <ImageView
        android:id="@+id/imageView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/bear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>